{
  "name": "vscode-zip-path",
  "displayName": "Zip With Path",
  "description": "Zip files and folders directly from VS Code explorer",
  "version": "0.0.1",
  "icon": "logo.png",
  "publisher": "kakha13",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeZipPath.zipFile",
        "title": "Zip File with full path"
      },
      {
        "command": "vscodeZipPath.zipFileSimple",
        "title": "Zip File only"
      },
      {
        "command": "vscodeZipPath.zipFolder",
        "title": "Zip Folder with full path"
      },
      {
        "command": "vscodeZipPath.zipFolderSimple",
        "title": "Zip Folder only"
      },
      {
        "command": "vscodeZipPath.zipSelected",
        "title": "Zip Selected with full path"
      },
      {
        "command": "vscodeZipPath.zipSelectedSimple",
        "title": "Zip Selected only"
      },
      {
        "command": "vscodeZipPath.zipWorkspace",
        "title": "Zip Workspace"
      }
    ],
    "submenus": [
      {
        "id": "vscodeZipPath.submenu",
        "label": "Zip With Path"
      },
      {
        "id": "vscodeZipPath.submenu2",
        "label": "Zip Without Path"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "vscodeZipPath.submenu",
          "group": "9_cutcopypaste"
        }
      ],
      "vscodeZipPath.submenu": [
        {
          "command": "vscodeZipPath.zipFile",
          "when": "!explorerResourceIsFolder && !listHasSelectionOrFocus"
        },
        {
          "command": "vscodeZipPath.zipFileSimple",
          "when": "!explorerResourceIsFolder && !listHasSelectionOrFocus"
        },
        {
          "command": "vscodeZipPath.zipFolder",
          "when": "explorerResourceIsFolder && !listHasSelectionOrFocus"
        },
        {
          "command": "vscodeZipPath.zipFolderSimple",
          "when": "explorerResourceIsFolder && !listHasSelectionOrFocus"
        },
        {
          "command": "vscodeZipPath.zipSelected",
          "when": "listHasSelectionOrFocus"
        },
        {
          "command": "vscodeZipPath.zipSelectedSimple",
          "when": "listHasSelectionOrFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "vscodeZipPath.zipWorkspace",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "dependencies": {
    "archiver": "^5.3.1"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "esbuild": "^0.25.9",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kakha13/zip-with-path"
  }
}
